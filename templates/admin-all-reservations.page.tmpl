{{template "admin" .}}

{{define "page-title"}}
  All Reservations
{{end}}

{{define "content"}}
  <div class="col-md-12">
    {{$res := index .Data "reservations"}}
      <table class="table table-striped table-hover" id="all-res">
        <thead>
          <tr>
            <th>ID</th>
            <th>Last Name</th>
            <th>Room</th>
            <th>Arrival</th>
            <th>Departure</th>
            <th>Booked At</th>
          </tr>
        </thead>
        <tbody>
          {{range $res}}
            <tr>
              <td>{{.ID}}</td>
              <td>
                <a href="/admin/reservations/all/{{.ID}}">
                  {{.FirstName}} {{.LastName}}
                </a>
              </td>
              <td>{{.Room.RoomName}}</td>
              <td>{{humanizeDate .StartDate}}</td>
              <td>{{humanizeDate .EndDate}}</td>
              <td>{{humanizeDate .CreatedAt}}</td>
            </tr>
          {{end}}
        </tbody>
      </table>
  </div>
{{end}}

{{define "js"}}
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const dataTable = new simpleDatatables.DataTable("#all-res", {})
    })
  </script>
{{end}}